{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "paths": {
      "@app/hooks": ["./src/hooks"]
    }
  },
  "exclude": ["./node_modules", "**/node_modules/*"],
  "include": ["./src"]
}
